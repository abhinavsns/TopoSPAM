include ~/example.mk

CC=mpic++

LDIR =

OBJ = Active2d.o

%.o: %.cpp
	$(CC) -O3 -march=x86-64 -c --std=c++14 -o $@ $< $(INCLUDE_PATH)

Active2d: $(OBJ)
	$(CC) -o $@ $^ $(CFLAGS) $(LIBS_PATH) $(LIBS)

all: Active2d

run: all
	mpirun -np 4 /Active2d

.PHONY: clean all run

clean:
	rm -f *.o *~ core Active2d
